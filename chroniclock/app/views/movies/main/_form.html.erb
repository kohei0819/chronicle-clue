<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'タイトル' %><br />
    <%= f.text_field :name_jp, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label '原題' %><br />
    <%= f.text_field :name, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'イントロダクション' %><br />
    <%= f.text_area :introduction, rows: "10" %>
  </div>

  <div class="field">
    <%= f.label 'ストーリー' %><br />
    <%= f.text_area :story, rows: "10" %>
  </div>

  <div class="field">
    <%= f.label '原作' %><br />
    <%= f.text_field :original, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'WEBサイト' %><br />
    <%= f.text_field :url, autocomplete: "off" %>
  </div>

  <div class="field">
    <% if @movie.image? %>
      <%= image_tag @movie.image.to_s, :size => "200x200" %>
    <% end %>
    <%= f.label '画像' %><br />
    <%= f.file_field :image, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'ムービー' %><br />
    <%= f.url_field :movie, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'ジャンル' %><br />
    <%= f.collection_select :category_ids, Category.all, :id, :name_jp, {include_hidden: false, :prompt => "Please Select", :selected => @movie_categories_selected}, {:multiple => true} %>
  </div>

  <div class="field">
    <%= f.label '国' %><br />
    <%= f.collection_select :country_ids, Country.all, :id, :name_jp, {include_hidden: false, :prompt => "Please Select", :selected => @movie_countries_selected}, {:multiple => true} %>
  </div>

  <div class="field">
    <%= f.label '言語' %><br />
    <%= f.collection_select :language_id, Language.all, :id, :name_jp, {include_hidden: false, :prompt => "Please Select", :selected => @movie_languages_selected}, {:multiple => true} %>
  </div>

  <div class="field">
    <%= f.label '時間' %><br />
    <%= f.text_field :time, autocomplete: "off" %>
  </div>

  <%= hidden_field :movie, :id %>
  <%= hidden_field :movie, :element_id %>

  <div class="actions">
    <%= f.submit "Update", class: 'button' %>
  </div>
<% end %>
